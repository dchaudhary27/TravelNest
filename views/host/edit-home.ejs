<%- include('../partials/head') %>
    </head>

    <body>
        <%- include('../partials/nav') , activeTab %>
            <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
                <h1 class="text-3xl font-bold mb-6 text-center text-gray-800"><%= editMode ? "Edit" : "Register" %>Your Home on TravelNest</h1>
                <form action="/host/<%= editMode ? "edit-home" : "add-home"%>" method="POST" class="max-w-md mx-auto">
                    <input type="hidden" name="id" value="<%= editMode ? home.id : '' %>"/>
                    <input type="text" value = "<%= editMode? home.homeName: '' %>" name="homeName" placeholder="Enter your House Name"
                        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <input type="number" value = "<%= editMode? home.rentPerDay: '' %>"  name="rentPerDay" placeholder="Enter Rent Per Day"
                        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <input type="text" value = "<%= editMode? home.address: '' %>"  name="address" placeholder="Enter Address"
                        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" />
            <div>
                <label class="block mb-2 text-gray-600 font-semibold">Your Rating:</label>
                
                    <div class="flex justify-between w-48 mx-auto">

                        <input type="radio" name="rating" value="1" id="rate1" class="hidden peer/1">
                        <label for="rate1"
                            class="text-3xl cursor-pointer text-gray-400 peer-checked/1:text-yellow-500">★</label>

                        <input type="radio" name="rating" value="2" id="rate2" class="hidden peer/2">
                        <label for="rate2"
                            class="text-3xl cursor-pointer text-gray-400 peer-checked/2:text-yellow-500">★</label>

                        <input type="radio" name="rating" value="3" id="rate3" class="hidden peer/3">
                        <label for="rate3"
                            class="text-3xl cursor-pointer text-gray-400 peer-checked/3:text-yellow-500">★</label>

                        <input type="radio" name="rating" value="4" id="rate4" class="hidden peer/4">
                        <label for="rate4"
                            class="text-3xl cursor-pointer text-gray-400 peer-checked/4:text-yellow-500">★</label>

                        <input type="radio" name="rating" value="5" id="rate5" class="hidden peer/5">
                        <label for="rate5"
                            class="text-3xl cursor-pointer text-gray-400 peer-checked/5:text-yellow-500">★</label>
                    </div>
               
            </div>

                    <div>
                        <label class="block mb-2 text-gray-600 font-semibold">Upload a Photo:</label>
                        <input type="text" value = "<%= editMode? home.photo: '' %>"  name="photo" placeholder="Enter Photo URL"
                            class=" block w-full text-gray-700 border border-gray-300 rounded-lg p-2 bg-gray-50">
                    </div>

                    <div>
                        <textarea name="description" placeholder="Describe your home"
                            class="w-full px-4 py-2 mt-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"><%= editMode ? home.description : '' %></textarea>
                    </div>

                    <br />
                    <input type="submit" value="<%= editMode ? "Update Home" : "Register Home" %>"
                        class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
                </form>
            </main>
    </body>

    </html>