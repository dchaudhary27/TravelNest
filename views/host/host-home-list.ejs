<%- include('../partials/head') %>
    </head>

    <body>
        <%- include('../partials/nav', { activeTab: 'host-home-list' }) %>
            <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl md:max-w-3xl lg:max-w-5xl">
                <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
                    Here are our registered homes:
                </h2>


                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 p-8">

                    <% registeredHomes.forEach(home=> { %>

                        <div
                            class="max-w-sm bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all">

                            <img src=<%= home.photo%> alt="<%= home.houseName %>" class="w-full h-48 object-cover">

                            <div class="p-5 space-y-3">
                                <h2 class="text-2xl font-bold text-gray-800">
                                    <%= home.homeName %>
                                </h2>
                                <p class="text-gray-500 text-sm">
                                    <%= home.address %>
                                </p>
                                <p class="text-blue-600 font-semibold text-xl">$<%= home.rentPerDay %> / night</p>

                                <!-- Rating -->
                                <div class="flex items-center space-x-1">
                                    <% for (let i=1; i <=5; i++) { %>
                                        <span class="text-xl <%= i <= home.rating ? ' text-yellow-500' : 'text-gray-300'
            %>">â˜…</span>
                                        <% } %>
                                </div>
                                <div class="flex gap-2">
                                    <a href="/host/edit-home/<%= home._id %>/?edit=true"
                                        class="flex-1 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition duration-300 text-center">Edit
                                    </a>
                                    <form action="/host/delete-home/<%= home._id %>" method="POST" class="flex-1">
                                        <button type="submit"
                                            class="w-full bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 transition duration-300">Delete</button>
                                    </form>
                                </div>

                            </div>


                        </div>

                        <% }) %>

                </div>

            </main>
    </body>

    </html>